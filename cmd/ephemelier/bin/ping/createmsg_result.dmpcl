package main

import (
	"ephemelier/kernel"
	"ephemelier/ports"
)

func main(g kernel.G, e kernel.E) (
	[]byte, kernel.PC, kernel.Syscall, int32, []byte, int32) {

	if g.arg0 < 0 {
		return nil, 0, kernel.SysExit, 1, nil, 0
	}

	msg := ports.EncodeMsg(g.argBuf, e.argBuf, []byte("Hello, pingd!"))

	return nil, intern(StSendResult), kernel.SysWrite, 3, /*XXX */
		msg, len(msg)
}
