package main

import (
	"ephemelier/kernel"
	"ephemelier/memory"
)

func main(g memory.G, e memory.E) (
	[]byte, kernel.PC, kernel.Syscall, int32, []byte, int32) {

	if g.arg0 < 0 {
		return nil, 0, kernel.SysExit, 1, nil, 0
	}
	if g.arg0 == 0 {
		return nil, intern(StClose), kernel.SysContinue, 0, nil, 0
	}

	return nil, intern(StWriteResult), kernel.SysWrite, 1, g.argBuf,
		len(g.argBuf)
}
