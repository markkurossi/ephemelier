package main

import (
	"encoding/binary"
	"ephemelier/kernel"
	"ephemelier/memory"
	"ephemelier/memory/semihonest"
)

func main(g semihonest.G1B, e memory.E1B) (
	[]byte, kernel.PC, kernel.Syscall, int32) {

	nonce, mem, ok := semihonest.Decode(g.mem, g.key, e.key)
	if !ok {
		return nil, 0, kernel.SysExit, -kernel.EINVAL
	}

	f0 := binary.GetUint32(mem[0:])
	f1 := binary.GetUint32(mem[4:])
	l := binary.GetUint32(mem[8:])

	f2 := f0 + f1
	l--

	mem = binary.PutUint32(mem, 0, f1)
	mem = binary.PutUint32(mem, 4, f2)
	mem = binary.PutUint32(mem, 8, l)

	var next kernel.PC

	if l == 0 {
		next = intern(StResult)
	} else {
		next = intern(StFibo)
	}

	return semihonest.Encode(nonce, mem, g.key, e.key), next,
		kernel.SysContinue, 0
}
