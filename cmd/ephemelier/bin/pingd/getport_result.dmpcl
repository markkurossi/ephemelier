package main

import (
	"ephemelier/kernel"
)

func main(g kernel.G, e kernel.E) ([]byte, kernel.PC, kernel.Syscall, int32) {

	if g.arg0 < 0 {
		return nil, 0, kernel.SysExit, 1
	}
	nonce, mem, ok := kernel.DecodeMem(g.mem, g.key, e.key)
	if !ok {
		return nil, 0, kernel.SysExit, -kernel.EINVAL
	}
	mem = binary.PutUint32(mem, 4, uint32(g.arg0))

	return kernel.EncodeMem(nonce, mem, g.key, e.key), intern(StReceive),
		kernel.SysYield, 0
}
