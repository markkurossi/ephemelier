package main

import (
	"ephemelier/kernel"
	"ephemelier/ports"
)

func main(g kernel.G, e kernel.E) (
	[]byte, kernel.PC, kernel.Syscall, int32) {

	if g.arg0 < 0 || e.arg0 < 0 {
		return nil, 0, kernel.SysExit, 41
	}
	if g.arg0 == 0 || e.arg0 == 0 {
		// EOF
		return nil, 0, kernel.SysExit, 0
	}

	return nil, intern(StDecodeMsg), kernel.SysYield, 0
}
