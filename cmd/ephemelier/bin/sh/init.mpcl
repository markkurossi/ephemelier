package main

import (
	"ephemelier/kernel"
)

func main(g, e kernel.PeerInit) (
	[]byte, kernel.PC, kernel.Syscall, int32, []byte, int32) {

	_ = intern(Init)

	motd := []byte("Ephemelier v0.0 - Copyright (c) 2025 Markku Rossi\r\n")

	var nonce [12]byte
	var mem [16]byte

	return kernel.EncodeMem(nonce, mem, g.key, e.key), intern(StPrompt),
		kernel.SysWrite, 1, motd, len(motd)
}
