package main

import (
	"ephemelier/kernel"
)

func main(g kernel.G1B, e kernel.E1B) (
	[]byte, kernel.PC, kernel.Syscall, int32, []byte, int32) {

	if g.arg0 < 0 {
		return nil, 0, kernel.SysExit, 1, nil, 0
	}

	mem := binary.PutUint32(g.mem, 4, uint32(g.arg0))

	// Start child handling the connection.
	cmd := []byte("tlsd\nchild")
	return mem, intern(StMainSpawnResult), kernel.SysSpawn, 0, cmd, len(cmd)
}
