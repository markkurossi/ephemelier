package main

import (
	"ephemelier/kernel"
)

func main(g kernel.G1B, e kernel.PeerInit) (
	[]byte, kernel.PC, kernel.Syscall, int32, []byte, int32) {

	_ = intern(Init)

	if g.arg1 > 0 {
		// Child.
		return nil, intern(StChildMain), kernel.SysYield, 1, nil, 0
	}

	// Parent, listen for connections.
	addr := []byte("tcp::8443")

	return nil, intern(StMainListenResult), kernel.SysListen, 0, addr, len(addr)
}
