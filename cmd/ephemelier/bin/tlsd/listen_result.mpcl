package main

import (
	"ephemelier/kernel"
)

func main(g kernel.G1B, e kernel.E1B) (
	[]byte, kernel.PC, kernel.Syscall, int32) {

	if g.arg0 < 0 {
		return nil, 0, kernel.SysExit, 1
	}

	var nonce [12]byte
	var mem [16]byte

	mem = binary.PutUint32(mem, 0, uint32(g.arg0))

	return kernel.EncodeMem(nonce, mem, g.key, e.key), intern(StAccept),
		kernel.SysYield, 0
}
